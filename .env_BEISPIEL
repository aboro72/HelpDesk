# ==================================================
# Django HelpDesk Environment Konfiguration
# ==================================================
# 
# Diese Datei enthält alle Einstellungen für das HelpDesk-System.
# Kopiere diese Datei zu '.env' und passe die Werte an.
#
# Alle Scripts (simple_https.py, create_superuser.py, etc.) 
# lesen ihre Einstellungen aus dieser Datei.

# ==================================================
# DJANGO BASIS-EINSTELLUNGEN
# ==================================================

# Debug-Modus (nur für Entwicklung)
DEBUG=True

# Secret Key (in Production ändern!)
SECRET_KEY=development-secret-key-change-in-production

# Erlaubte Hosts (durch Kommas getrennt)
ALLOWED_HOSTS=localhost,127.0.0.1,help.aboro-it.net

# ==================================================
# BRANDING & APPEARANCE
# ==================================================

# Name der Anwendung (in Navbar angezeigt)
APP_NAME=Aboro-IT Helpdesk

# Firmenname für Branding
COMPANY_NAME=Aboro-IT

# Logo-URL (kann /static/images/logo.png oder externe URL sein)
LOGO_URL=/static/logo.jpg

# Titel in Browser-Tabs
APP_TITLE=Aboro-IT Helpdesk

# ==================================================
# DATENBANK
# ==================================================

# SQLite für Entwicklung, MySQL für Production
DATABASE_URL=sqlite:///db.sqlite3
#DATABASE_URL=mysql://user:password@localhost:3306/helpdesk

# ==================================================
# DEVELOPMENT SERVER EINSTELLUNGEN
# ==================================================

# HTTPS aktivieren/deaktivieren
HTTPS_ENABLED=True

# Server-Host und Port
DEV_HOST=localhost
DEV_PORT=8000

# HTTPS-spezifische Einstellungen
HTTPS_HOST=localhost
HTTPS_PORT=8000

# SSL-Zertifikat Pfade
SSL_CERT_FILE=ssl/localhost.crt
SSL_KEY_FILE=ssl/localhost.key

# Site URL für E-Mail-Links
SITE_URL=https://help.aboro-it.net

# ==================================================
# STANDARD ADMIN-BENUTZER
# ==================================================

# Diese Werte werden von create_superuser.py verwendet
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@helpdesk.local
DEFAULT_ADMIN_FIRSTNAME=Admin
DEFAULT_ADMIN_LASTNAME=User

# ==================================================
# E-MAIL EINSTELLUNGEN
# ==================================================

# SMTP-Einstellungen (optional)
EMAIL_USERNAME=
EMAIL_PASSWORD=

# ==================================================
# INTEGRATION SERVICES
# ==================================================

# Microsoft Azure AD (optional)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# Claude AI API (optional)
CLAUDE_API_KEY=

# Microsoft Teams Webhook (optional)
TEAMS_WEBHOOK_URL=

# Sentry Fehler-Tracking (optional)
SENTRY_DSN=

# ==================================================
# SICHERHEIT
# ==================================================

# JWT Secret (in Production ändern!)
JWT_SECRET_KEY=development-jwt-secret

# CSRF Secret (in Production ändern!)
CSRF_SECRET_KEY=development-csrf-secret

# ==================================================
# CACHING & PERFORMANCE
# ==================================================

# Redis für Caching (optional)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# ==================================================
# AUTO-UPDATE (optional)
# ==================================================

# GitHub Repository für Updates
GITHUB_REPO=aboro72/HelpDesk
GITHUB_BRANCH=main

# Automatische Updates
AUTO_UPDATE=False
AUTO_UPDATE_HOUR=2